<Window x:Name="GamepadInputTesterWindow" x:Class="GamepadInputTester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrbisPro"
        mc:Ignorable="d"
         Title="OrbisPro - Gamepad Input Tester" Height="1080" Width="1920" WindowStyle="None" Background="Black" ResizeMode="NoResize" Canvas.Left="0" Canvas.Top="0" 
        KeyboardNavigation.DirectionalNavigation="None" KeyboardNavigation.TabNavigation="None" KeyboardNavigation.ControlTabNavigation="None">
    <Canvas x:Name="GamepadInputTesterCanvas">
        <MediaElement x:Name="BackgroundMedia" Height="1080" Width="1920" Source="/System/Backgrounds/bluecircles.mp4" LoadedBehavior="Manual" UnloadedBehavior="Manual"/>

        <TextBlock x:Name="WindowTitle" Text="Gamepad Input Tester" FontFamily="SST Light" Foreground="White" FontSize="60" Height="78" Canvas.Left="101" Canvas.Top="43" Width="750">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="4"/>
            </TextBlock.Effect>
        </TextBlock>
        <Separator x:Name="TopSeparator" Background="White" Foreground="{x:Null}" Height="10" Canvas.Top="135" Width="1920"/>
        <Separator x:Name="BottomSeparator" Background="White" Foreground="{x:Null}" Height="10" Canvas.Top="968" Width="1920"/>
        <Image x:Name="CloseButton1" Source="/Icons/Buttons/PS3/PS3_Square.png" Height="48" Canvas.Left="120" Canvas.Top="981" Width="48"/>
        <TextBlock x:Name="BackTextBlock" TextWrapping="Wrap" Text="Close" Foreground="White" FontFamily="SST Light" FontSize="36" Height="47" Canvas.Left="238" Canvas.Top="980" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="1"/>
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock x:Name="ControllerReadingsTextBlock" Canvas.Left="210" TextWrapping="Wrap" Canvas.Top="171" Foreground="White" FontSize="40" FontFamily="SST" Width="1500" Height="773" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="4"/>
            </TextBlock.Effect>
        </TextBlock>
        <Image x:Name="CloseButton2" Source="/Icons/Buttons/PS3/PS3_Circle.png" Height="48" Canvas.Left="185" Canvas.Top="981" Width="48" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock x:Name="ButtonComboTextBlock" TextWrapping="Wrap" Text="+" Foreground="White" FontFamily="SST" FontSize="36" Canvas.Left="167" Canvas.Top="978" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="4" ShadowDepth="1"/>
            </TextBlock.Effect>
        </TextBlock>

    </Canvas>
</Window>
